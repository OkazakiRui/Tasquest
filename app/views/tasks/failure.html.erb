<div class="flex justify-center m-4 text-2xl">
    <h1>失敗したクエスト</h1>
</div>

<div class="focus:outline-none py-8 lg:w-full w-11/12 m-auto">
    <div class="lg:flex-wrap lg:flex items-center justify-center w-full gap-y-8">
        
        <% if @tasks.blank? %>
        <h1>失敗したクエストはありません！！</h1>
        <% end %>
        <% @tasks.each do |task| %>
            <%= link_to task_path(task), class: "focus:outline-none lg:w-4/12 lg:mr-7 lg:mb-0 mb-7 bg-white p-6 shadow rounded block hover:shadow-xl duration-200" do %>
                <div class="flex items-center border-b border-gray-200 pb-6">
                    <div class="flex items-start justify-between w-full">
                        <div class="pl-3 w-full">
                            <p tabindex="0" class="focus:outline-none text-xl font-medium leading-5 text-gray-800"><%= task.title %></p>
                            <p tabindex="0" class="focus:outline-none text-sm leading-normal pt-2 text-gray-500">締切日：<%= task.deadline %></p>
                        </div>
                    </div>
                </div>
                <div class="px-2">
                    <div tabindex="0" class="focus:outline-none flex pt-4">
                        <% 5.times do |index| %>
                            <% if task.priority > index %>
                                <i class="fas fa-star"></i>
                            <% else %>
                                <i class="far fa-star"></i>
                            <% end %>  
                        <% end %>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>